# ===== CONFIGURACIÓN PRINCIPAL =====
# API Key de Groq (requerido)
GROQ_API_KEY=tu_groq_api_key_aqui

# Modelo de IA (opcional, por defecto: deepseek-r1-distill-llama-70b)
GROQ_MODEL=deepseek-r1-distill-llama-70b

# ===== CONFIGURACIÓN DEL SERVIDOR =====
# Puerto del servidor (opcional, por defecto: 8003)
PORT=8003

# Nivel de logging (opcional, por defecto: INFO)
LOG_LEVEL=INFO

# ===== CONFIGURACIÓN RAG =====
# Umbral de similitud para RAG (opcional, por defecto: 0.35)
RAG_SCORE_THRESHOLD=0.35

# Máximo de resultados de búsqueda (opcional, por defecto: 10)
MAX_SEARCH_RESULTS=10

# ===== CONFIGURACIÓN DE TEMPERATURA =====
# Temperaturas por tipo de consulta (opcional)
TEMPERATURE_CHAT=0.7
TEMPERATURE_SEARCH=0.3
TEMPERATURE_ANALYSIS=0.1
TEMPERATURE_CREATIVE=0.9